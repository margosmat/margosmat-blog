<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Redirecting...</title>
    <script is:inline>
      const lang = navigator.language.startsWith('pl') ? 'pl' : 'en';
      window.location.href = `/${lang}`;
    </script>
    <meta http-equiv="refresh" content="0;url=/en" />
  </head>
  <body class="bg-black text-white flex items-center justify-center min-h-screen m-0 p-0 overflow-hidden">
    <!-- Pulsating Logo Loader -->
    <div class="relative flex flex-col items-center">
      <div class="relative w-32 h-32 animate-pulse">
         <img src="/logo.png" alt="Loading..." class="w-full h-full object-contain filter invert" />
      </div>
    </div>
  </body>
</html>
